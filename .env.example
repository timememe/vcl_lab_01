# JWT Secret (REQUIRED in production!)
JWT_SECRET=your-secret-key-change-in-production

# API Server Port
API_PORT=4000

# AI API Keys (REQUIRED - server-side only, never exposed to client)
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Supabase Configuration (for PostgreSQL database)
# Get these from your Supabase project dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here

# Client-side Supabase (optional, for future features)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_SERVICE_KEY=your_anon_key_here
